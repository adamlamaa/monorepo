{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "format": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}